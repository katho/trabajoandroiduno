<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.catarino.trabajo.uno.MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_height="577dp" tools:layout_editor_absoluteY="-3dp"
            tools:layout_editor_absoluteX="-21dp"
            android:layout_width = "429dp"
            android:layout_gravity = "center"
            android:weightSum="1"
            android:background="#000000">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_height="462dp"
                tools:layout_editor_absoluteY="0dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="#000000"
                android:layout_width="158dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity = "center" android:layout_weight="0.45">
            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hola Android"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView" android:layout_weight="0.58"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
